# Copy to .env and set values. Do not commit .env.
# On VPS: set these in systemd environment or a .env file loaded by your process manager.

# Admin login (/admin) — required for protected routes
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Session signing — required; use a long random string
SESSION_SECRET=your_long_random_session_secret

# Optional: paths (defaults are relative to server directory)
# WEBSITE_DIR=/home/endri/browser_project/website
# BUILDS_DIR=/home/endri/browser_project/builds
# LOGS_DIR=/home/endri/browser_project/logs

# Optional: port and bind (default 3000, 127.0.0.1)
# PORT=3000
# BIND_ADDRESS=127.0.0.1

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- Default compact dark theme -->
    <sys:Double x:Key="NavButtonSize">32</sys:Double>
    <sys:Double x:Key="AddressBarHeight">38</sys:Double>
    <sys:Double x:Key="AddressBarFontSize">13</sys:Double>
    <sys:Double x:Key="ProtectionPillHeight">28</sys:Double>
    <sys:Double x:Key="ProtectionPillMinWidth">88</sys:Double>
    <sys:Double x:Key="ProtectionPillFontSize">11</sys:Double>
    <sys:Double x:Key="ShieldBadgeSize">22</sys:Double>
    <GridLength x:Key="SidebarWidth">460</GridLength>
    <sys:Double x:Key="StatusBarFontSize">11</sys:Double>
    <sys:Double x:Key="APillHeight">32</sys:Double>
    <sys:Double x:Key="APillFontSize">12</sys:Double>

    <SolidColorBrush x:Key="WindowBackground" Color="#202124"/>
    <SolidColorBrush x:Key="TabBarBackground" Color="#292A2D"/>
    <SolidColorBrush x:Key="ChromeIconBrush" Color="#9AA0A6"/>
    <SolidColorBrush x:Key="ChromeButtonHoverBrush" Color="#3C4043"/>
    <SolidColorBrush x:Key="ActiveTabBorderBrush" Color="#3C4043"/>
    <SolidColorBrush x:Key="TabBarBorderBrush" Color="#3C4043"/>
    <SolidColorBrush x:Key="NavBarBackground" Color="#292A2D"/>
    <SolidColorBrush x:Key="NavBarBorderBrush" Color="#3C4043"/>
    <SolidColorBrush x:Key="AddressBarBackground" Color="#35363A"/>
    <SolidColorBrush x:Key="AddressBarBorderBrush" Color="#5F6368"/>
    <SolidColorBrush x:Key="AddressBarFocusBrush" Color="#38BDF8"/>
    <SolidColorBrush x:Key="StatusBarBackground" Color="#292A2D"/>
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="#3C4043"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="#292A2D"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="#3C4043"/>
    <SolidColorBrush x:Key="ContentBackground" Color="#202124"/>
    <SolidColorBrush x:Key="LoadingBarBackground" Color="#3C4043"/>
    <SolidColorBrush x:Key="LoadingBarForeground" Color="#38BDF8"/>
    <LinearGradientBrush x:Key="ProtectionPillBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0D9488" Offset="0"/>
        <GradientStop Color="#06B6D4" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ProtectionPillForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackground" Color="#35363A"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#5F6368"/>
    <SolidColorBrush x:Key="SidebarHeaderBackground" Color="#35363A"/>
    <SolidColorBrush x:Key="ScoreBannerBackground" Color="#1E3A2F"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#E8EAED"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#9AA0A6"/>
    <SolidColorBrush x:Key="TextMuted" Color="#80868B"/>
    <SolidColorBrush x:Key="ChipBackground" Color="#3C4043"/>
    <SolidColorBrush x:Key="ScoreRingStroke" Color="#5F6368"/>
    <SolidColorBrush x:Key="ScoreRingCenterBackground" Color="#35363A"/>
    <SolidColorBrush x:Key="ScoreBarTrackBrush" Color="#5F6368"/>
    <SolidColorBrush x:Key="ScoreBarFillBrush" Color="#38BDF8"/>
    <SolidColorBrush x:Key="CardSecondaryBackground" Color="#3C4043"/>
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#3C4043"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#5F6368"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#80868B"/>
    <SolidColorBrush x:Key="MenuPopupBackground" Color="#35363A"/>
    <SolidColorBrush x:Key="MenuItemHoverBrush" Color="#4A4B4F"/>
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#5F6368"/>
    <SolidColorBrush x:Key="AccentLinkBrush" Color="#38BDF8"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#34A853"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F29900"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#EA4335"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#5C2B2B"/>
    <SolidColorBrush x:Key="DangerButtonForeground" Color="#F28B82"/>
    <SolidColorBrush x:Key="HighRiskWarningBackground" Color="#4A2525"/>
    <SolidColorBrush x:Key="HighRiskWarningBorder" Color="#EA4335"/>
    <SolidColorBrush x:Key="HighRiskWarningText" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="CrashOverlayBackground" Color="#202124"/>
    <SolidColorBrush x:Key="CrashOverlayTitle" Color="#E8EAED"/>
    <SolidColorBrush x:Key="CrashOverlaySubtitle" Color="#9AA0A6"/>

    <FontFamily x:Key="AppFont">Segoe UI Variable, Segoe UI, Arial</FontFamily>

    <Style x:Key="TextDisplay" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style x:Key="TextBodyMuted" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style x:Key="TextLabel" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextCaption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
</ResourceDictionary>

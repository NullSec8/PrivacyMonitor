<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- Large / accessibility dark theme: high contrast, bigger text and controls -->
    <sys:Double x:Key="NavButtonSize">44</sys:Double>
    <sys:Double x:Key="AddressBarHeight">48</sys:Double>
    <sys:Double x:Key="AddressBarFontSize">16</sys:Double>
    <sys:Double x:Key="ProtectionPillHeight">40</sys:Double>
    <sys:Double x:Key="ProtectionPillMinWidth">110</sys:Double>
    <sys:Double x:Key="ProtectionPillFontSize">14</sys:Double>
    <sys:Double x:Key="ShieldBadgeSize">28</sys:Double>
    <GridLength x:Key="SidebarWidth">520</GridLength>
    <sys:Double x:Key="StatusBarFontSize">14</sys:Double>
    <sys:Double x:Key="APillHeight">40</sys:Double>
    <sys:Double x:Key="APillFontSize">14</sys:Double>

    <SolidColorBrush x:Key="WindowBackground" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="TabBarBackground" Color="#171717"/>
    <SolidColorBrush x:Key="ChromeIconBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ChromeButtonHoverBrush" Color="#404040"/>
    <SolidColorBrush x:Key="ActiveTabBorderBrush" Color="#A3A3A3"/>
    <SolidColorBrush x:Key="TabBarBorderBrush" Color="#525252"/>
    <SolidColorBrush x:Key="NavBarBackground" Color="#171717"/>
    <SolidColorBrush x:Key="NavBarBorderBrush" Color="#525252"/>
    <SolidColorBrush x:Key="AddressBarBackground" Color="#262626"/>
    <SolidColorBrush x:Key="AddressBarBorderBrush" Color="#525252"/>
    <SolidColorBrush x:Key="AddressBarFocusBrush" Color="#7DD3FC"/>
    <SolidColorBrush x:Key="StatusBarBackground" Color="#171717"/>
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="#525252"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="#171717"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="#525252"/>
    <SolidColorBrush x:Key="ContentBackground" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="LoadingBarBackground" Color="#404040"/>
    <SolidColorBrush x:Key="LoadingBarForeground" Color="#7DD3FC"/>
    <LinearGradientBrush x:Key="ProtectionPillBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2DD4BF" Offset="0"/>
        <GradientStop Color="#22D3EE" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ProtectionPillForeground" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="CardBackground" Color="#262626"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#525252"/>
    <SolidColorBrush x:Key="SidebarHeaderBackground" Color="#262626"/>
    <SolidColorBrush x:Key="ScoreBannerBackground" Color="#14532D"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="TextMuted" Color="#A3A3A3"/>
    <SolidColorBrush x:Key="ChipBackground" Color="#404040"/>
    <SolidColorBrush x:Key="ScoreRingStroke" Color="#525252"/>
    <SolidColorBrush x:Key="ScoreRingCenterBackground" Color="#262626"/>
    <SolidColorBrush x:Key="ScoreBarTrackBrush" Color="#525252"/>
    <SolidColorBrush x:Key="ScoreBarFillBrush" Color="#7DD3FC"/>
    <SolidColorBrush x:Key="CardSecondaryBackground" Color="#404040"/>
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#404040"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#737373"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#A3A3A3"/>
    <SolidColorBrush x:Key="MenuPopupBackground" Color="#262626"/>
    <SolidColorBrush x:Key="MenuItemHoverBrush" Color="#404040"/>
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#525252"/>
    <SolidColorBrush x:Key="AccentLinkBrush" Color="#7DD3FC"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4ADE80"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#7F1D1D"/>
    <SolidColorBrush x:Key="DangerButtonForeground" Color="#FECACA"/>
    <SolidColorBrush x:Key="HighRiskWarningBackground" Color="#7F1D1D"/>
    <SolidColorBrush x:Key="HighRiskWarningBorder" Color="#F87171"/>
    <SolidColorBrush x:Key="HighRiskWarningText" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="CrashOverlayBackground" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="CrashOverlayTitle" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="CrashOverlaySubtitle" Color="#A3A3A3"/>

    <FontFamily x:Key="AppFont">Segoe UI Variable, Segoe UI, Arial</FontFamily>

    <Style x:Key="TextDisplay" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>
    <Style x:Key="TextBodyMuted" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>
    <Style x:Key="TextLabel" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextCaption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
</ResourceDictionary>

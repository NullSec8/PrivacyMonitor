<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- Large / accessibility light theme: high contrast, bigger text and controls -->
    <sys:Double x:Key="NavButtonSize">44</sys:Double>
    <sys:Double x:Key="AddressBarHeight">48</sys:Double>
    <sys:Double x:Key="AddressBarFontSize">16</sys:Double>
    <sys:Double x:Key="ProtectionPillHeight">40</sys:Double>
    <sys:Double x:Key="ProtectionPillMinWidth">110</sys:Double>
    <sys:Double x:Key="ProtectionPillFontSize">14</sys:Double>
    <sys:Double x:Key="ShieldBadgeSize">28</sys:Double>
    <GridLength x:Key="SidebarWidth">520</GridLength>
    <sys:Double x:Key="StatusBarFontSize">14</sys:Double>
    <sys:Double x:Key="APillHeight">40</sys:Double>
    <sys:Double x:Key="APillFontSize">14</sys:Double>

    <SolidColorBrush x:Key="WindowBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabBarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ChromeIconBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="ChromeButtonHoverBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="ActiveTabBorderBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="TabBarBorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="NavBarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="NavBarBorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="AddressBarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AddressBarBorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="AddressBarFocusBrush" Color="#0369A1"/>
    <SolidColorBrush x:Key="StatusBarBackground" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="ContentBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="LoadingBarBackground" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="LoadingBarForeground" Color="#0369A1"/>
    <LinearGradientBrush x:Key="ProtectionPillBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0F766E" Offset="0"/>
        <GradientStop Color="#0369A1" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ProtectionPillForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="SidebarHeaderBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ScoreBannerBackground" Color="#ECFDF5"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#1E293B"/>
    <SolidColorBrush x:Key="TextMuted" Color="#334155"/>
    <SolidColorBrush x:Key="ChipBackground" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="ScoreRingStroke" Color="#334155"/>
    <SolidColorBrush x:Key="ScoreRingCenterBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ScoreBarTrackBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="ScoreBarFillBrush" Color="#0369A1"/>
    <SolidColorBrush x:Key="CardSecondaryBackground" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#475569"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#1E293B"/>
    <SolidColorBrush x:Key="MenuPopupBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MenuItemHoverBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#334155"/>
    <SolidColorBrush x:Key="AccentLinkBrush" Color="#0369A1"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#15803D"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#C2410C"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#B91C1C"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="DangerButtonForeground" Color="#B91C1C"/>
    <SolidColorBrush x:Key="HighRiskWarningBackground" Color="#450A0A"/>
    <SolidColorBrush x:Key="HighRiskWarningBorder" Color="#B91C1C"/>
    <SolidColorBrush x:Key="HighRiskWarningText" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="CrashOverlayBackground" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="CrashOverlayTitle" Color="#0F172A"/>
    <SolidColorBrush x:Key="CrashOverlaySubtitle" Color="#334155"/>

    <FontFamily x:Key="AppFont">Segoe UI Variable, Segoe UI, Arial</FontFamily>

    <Style x:Key="TextDisplay" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>
    <Style x:Key="TextBodyMuted" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>
    <Style x:Key="TextLabel" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    <Style x:Key="TextCaption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
</ResourceDictionary>

<Window x:Class="PrivacyMonitor.NetworkInterceptor.NetworkInterceptorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PrivacyMonitor.NetworkInterceptor"
        Title="Live Network Interceptor" Width="1200" Height="700" MinWidth="800" MinHeight="400"
        Background="#1E1E2E" WindowStartupLocation="CenterOwner"
        UseLayoutRounding="True">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" Invert="False"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityInverseConverter" Invert="True"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" Invert="False"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#45475A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="{TemplateBinding Padding}" Cursor="Hand">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#89B4FA"/>
                                <Setter Property="Foreground" Value="#89B4FA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#313244"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" BorderBrush="#45475A" BorderThickness="0,0,0,1" Margin="0,0,0,0">
                                <TabPanel x:Name="HeaderPanel" IsItemsHost="True"/>
                            </Border>
                            <ContentPresenter Grid.Row="1" ContentSource="SelectedContent" Margin="0,8,0,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Risk level colors for grid -->
        <Style x:Key="RiskLow" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A6E3A1"/>
        </Style>
        <Style x:Key="RiskMedium" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9E2AF"/>
        </Style>
        <Style x:Key="RiskHigh" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F38BA8"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Toolbar + Live metrics -->
        <Border Grid.Row="0" Background="#313244" Padding="10,8" BorderBrush="#45475A" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PauseBtn" Content="Pause" Command="{Binding PauseCommand}" Margin="0,0,6,0"
                            ToolTip="Hold new requests at network level (Burp-style). Status shows pending count until Resume."/>
                    <Button x:Name="ResumeBtn" Content="Resume" Command="{Binding ResumeCommand}" Margin="0,0,6,0"
                            ToolTip="Release held requests; they are sent and appear in the grid with RiskScore."/>
                    <Button Content="Clear" Command="{Binding ClearCommand}" Margin="0,0,8,0"/>
                    <Border Margin="8,0" Background="#45475A" Width="1"/>
                    <TextBlock Text="Max:" VerticalAlignment="Center" Foreground="#A6ADC8" FontSize="11" Margin="0,0,4,0"/>
                    <TextBox x:Name="MaxHistoryBox" Width="52" VerticalAlignment="Center" Padding="4,3" FontSize="11"
                             Text="{Binding MaxHistory, UpdateSourceTrigger=PropertyChanged}" Background="#45475A" Foreground="#CDD6F4" BorderThickness="0"/>
                    <TextBlock Text="Batch ms:" VerticalAlignment="Center" Foreground="#A6ADC8" FontSize="10" Margin="12,0,4,0"/>
                    <TextBox Width="40" VerticalAlignment="Center" Padding="4,3" FontSize="10"
                             Text="{Binding BatchIntervalMs, UpdateSourceTrigger=PropertyChanged}" Background="#45475A" Foreground="#CDD6F4" BorderThickness="0"/>
                </StackPanel>
                <!-- Live metrics panel -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Total:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.TotalRequests}" Foreground="#89B4FA" FontSize="11" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    <TextBlock Text="3rd:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.ThirdPartyCount}" Foreground="#F9E2AF" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="Tracker:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.TrackerCount}" Foreground="#F38BA8" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="High risk:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.HighRiskCount}" Foreground="#F38BA8" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="Avg risk:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.AverageRiskScore}" Foreground="#A6E3A1" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="Transferred:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.TotalTransferredFormatted}" Foreground="#CDD6F4" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="Req/s:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.RequestsPerSecond}" Foreground="#89B4FA" FontSize="11" Margin="0,0,8,0"/>
                    <TextBlock Text="RPS avg:" Foreground="#6C7086" FontSize="10" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Metrics.RpsMovingAverage}" Foreground="#89B4FA" FontSize="11" ToolTip="Moving average (last 5 batches)"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Replay" Command="{Binding ReplayRequestCommand}" Padding="8,4" FontSize="11" Margin="0,0,6,0"
                            ToolTip="Click Replay to send request; response will update grid and recalc RiskScore."/>
                    <Button Content="Replay with modification…" Command="{Binding ReplayWithModifyCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Padding="8,4" FontSize="11" Margin="0,0,6,0"
                            ToolTip="Edit headers (and optional body); send only when you click Replay. Response updates grid and RiskScore."/>
                    <Button Content="Batch replay" Command="{Binding ReplaySelectedCommand}" Padding="8,4" FontSize="11" Margin="0,0,6,0"
                            ToolTip="{Binding ReplayBatchTooltip}"/>
                    <Button Content="Batch replay with modification…" Command="{Binding ReplaySelectedWithModifyCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Padding="8,4" FontSize="11" Margin="0,0,6,0"
                            ToolTip="Open ReplayModify for each selected; send only when you click Replay in each dialog."/>
                    <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" Foreground="#A6ADC8" FontSize="11" Margin="0,0,8,0"
                               ToolTip="{Binding PausedStatusText}"/>
                    <Button Content="Export session" Command="{Binding ExportSessionCommand}" Padding="8,4" FontSize="11" Margin="0,0,4,0"/>
                    <Button Content="Export (streaming)" Command="{Binding ExportSessionStreamingCommand}" Padding="8,4" FontSize="11" Margin="0,0,4,0"
                            ToolTip="Streaming NDJSON with progress; use gzip for large sessions (see menu)."/>
                    <CheckBox Content="Gzip" IsChecked="{Binding ExportWithGzip}" Foreground="#A6ADC8" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"
                             ToolTip="Compress streaming export (NDJSON.gz)."/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,16,0,0" VerticalAlignment="Top"
                             Visibility="{Binding ExportInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar Height="4" Width="200" Margin="0,0,8,0" VerticalAlignment="Center"
                                 Value="{Binding ExportProgress, Mode=OneWay}" Maximum="100"/>
                    <Button Content="Cancel" Command="{Binding CancelExportCommand}" Padding="6,2" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Metrics chart (collapsible) -->
        <Expander Grid.Row="1" Header="Live metrics chart" IsExpanded="{Binding ChartPanelExpanded, Mode=TwoWay}" Margin="8,4" Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A" BorderThickness="0,0,0,1">
            <Border x:Name="ChartPanelBorder" Background="#1E1E2E" Padding="12,8" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="RPS (last 60)" Foreground="#6C7086" FontSize="10" VerticalAlignment="Bottom" Margin="0,0,8,0"/>
                        <ItemsControl ItemsSource="{Binding ChartSamples}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="4" Height="40" Margin="0,0,1,0" VerticalAlignment="Bottom"
                                            Background="#89B4FA" Opacity="{Binding RpsNormalized}"
                                            ToolTip="{Binding Rps, StringFormat={}{0:F0} req/s}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="RPS trend (avg)" Foreground="#6C7086" FontSize="10" VerticalAlignment="Bottom" Margin="0,0,8,0"/>
                        <ItemsControl ItemsSource="{Binding ChartSamples}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="4" Height="24" Margin="0,0,1,0" VerticalAlignment="Bottom"
                                            Background="#A6E3A1" Opacity="{Binding RpsMovingAverageNormalized}"
                                            ToolTip="{Binding RpsMovingAverage, StringFormat={}{0:F0} req/s (avg)}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical">
                        <TextBlock Text="High-risk share" Foreground="#6C7086" FontSize="10" Margin="0,0,0,4"/>
                        <ItemsControl ItemsSource="{Binding ChartSamples}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="4" Height="40" Margin="0,0,1,0" VerticalAlignment="Bottom"
                                            Background="#F38BA8" Opacity="{Binding HighRiskNormalized}"
                                            ToolTip="{Binding HighRisk, StringFormat={}{0} high-risk}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,12,0,0">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                            <TextBlock Text="Top domains by high-risk" Foreground="#6C7086" FontSize="10" Margin="0,0,0,6"/>
                            <ItemsControl ItemsSource="{Binding TopDomainsByHighRisk}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2,0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Domain}" Foreground="#CDD6F4" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0" ToolTip="{Binding Domain}"/>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="{Binding HighRiskCount}" Foreground="#F38BA8" FontSize="10" Margin="0,0,2,0" ToolTip="High-risk count"/>
                                                <TextBlock Text="/" Foreground="#6C7086" FontSize="9"/>
                                                <TextBlock Text="{Binding TotalCount}" Foreground="#A6ADC8" FontSize="10" Margin="2,0,0,0" ToolTip="Total requests"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <Button x:Name="ExportChartButton" Content="Export chart (PNG)" Padding="8,4" FontSize="10" Margin="12,0,0,0" VerticalAlignment="Top" Click="ExportChartButton_Click" ToolTip="Save chart snapshot as PNG"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Expander>
        <!-- Two-panel content -->
        <Grid Grid.Row="2" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="3*" MinWidth="280"/>
            </Grid.ColumnDefinitions>
            <!-- Left: request list -->
            <Border Grid.Column="0" Background="#313244" CornerRadius="8" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Requests" Foreground="#CDD6F4" FontWeight="SemiBold" FontSize="13" Margin="12,10,0,8"/>
                    <DataGrid x:Name="RequestGrid" Grid.Row="1" ItemsSource="{Binding Requests}"
                              SelectedItem="{Binding SelectedRequest, Mode=TwoWay}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                              CanUserReorderColumns="True" CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              Background="#1E1E2E" RowBackground="#313244" AlternatingRowBackground="#45475A"
                              BorderThickness="0" Margin="4,0,4,4"
                              RowHeight="28" FontSize="11" FontFamily="Consolas"
                              SelectionMode="Extended" SelectionChanged="RequestGrid_SelectionChanged"
                              EnableRowVirtualization="True" EnableColumnVirtualization="True"
                              VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Foreground" Value="#CDD6F4"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Category}" Value="Fingerprinting">
                                        <Setter Property="Background" Value="#3D2C4D"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                        <Setter Property="Foreground" Value="#F38BA8"/>
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" From="0.5" To="1" Duration="0:0:0.35"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                        <Setter Property="Foreground" Value="#F38BA8"/>
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" From="0.5" To="1" Duration="0:0:0.35"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                        <Setter Property="Foreground" Value="#F9E2AF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                        <Setter Property="Foreground" Value="#A6E3A1"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasReplayError}" Value="True">
                                        <Setter Property="Background" Value="#4D2C2C"/>
                                        <Setter Property="ToolTip" Value="{Binding ReplayStatusMessage}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsReplayedWithModification}" Value="True">
                                        <Setter Property="Background" Value="#2C3D2C"/>
                                        <Setter Property="ToolTip" Value="Replayed with modified headers"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Method" Binding="{Binding Method}" Width="52"/>
                            <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding ResourceType}" Width="52"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusCode}" Width="48"/>
                            <DataGridTextColumn Header="Size" Width="56">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ResponseSize" StringFormat="{}{0:N0}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Time" Width="56">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DurationMs" StringFormat="{}{0:F0} ms"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="3rd" Binding="{Binding IsThirdParty}" Width="32"/>
                            <DataGridTextColumn Header="Tracker" Binding="{Binding IsTracker}" Width="48"/>
                            <DataGridTextColumn Header="Risk" Binding="{Binding RiskLevel}" Width="58">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="ToolTip" Value="{Binding RiskExplanation}"/>
                                        <Setter Property="Text" Value="{Binding RiskLevel}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="" Width="24">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value=""/>
                                        <Setter Property="ToolTip" Value="Fingerprinting risk"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Category}" Value="Fingerprinting">
                                                <Setter Property="Text" Value="⚠"/>
                                                <Setter Property="Foreground" Value="#F38BA8"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy URL" Command="{Binding CopyUrlCommand}"/>
                                <MenuItem Header="Replay request" Command="{Binding ReplayRequestCommand}" ToolTip="Click Replay to send request; response will update grid and recalc RiskScore."/>
                                <MenuItem Header="Replay with modification…" Command="{Binding ReplayWithModifyCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="Edit headers/body; send only on Replay click."/>
                                <MenuItem Header="Batch replay selected" Command="{Binding ReplaySelectedCommand}" ToolTip="{Binding ReplayBatchTooltip}"/>
                                <MenuItem Header="Batch replay selected with modification…" Command="{Binding ReplaySelectedWithModifyCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" ToolTip="ReplayModify for each selected; send only when you click Replay."/>
                                <Separator/>
                                <MenuItem Header="Block this domain" Command="{Binding BlockDomainCommand}"/>
                                <MenuItem Header="Export selected (JSON)" Command="{Binding ExportRequestCommand}"/>
                                <MenuItem Header="Export full session" Command="{Binding ExportSessionCommand}"/>
                                <MenuItem Header="Export full session (streaming)" Command="{Binding ExportSessionChunkedCommand}" ToolTip="For large sessions; writes NDJSON to avoid memory spike."/>
                                <MenuItem Header="Export full session (streaming + progress)" Command="{Binding ExportSessionStreamingCommand}" ToolTip="NDJSON with progress bar; enable Gzip in toolbar for compression."/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </Border>
            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Stretch" Background="Transparent"/>
            <!-- Right: detail tabs -->
            <Border Grid.Column="2" Background="#313244" CornerRadius="8" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Request details" Foreground="#CDD6F4" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8"/>
                    <TabControl Grid.Row="1" x:Name="DetailTabs" Visibility="{Binding SelectedRequest, Converter={StaticResource NullToVisibilityConverter}}">
                        <TabItem Header="Request Headers">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="RequestHeadersText" IsReadOnly="True" TextWrapping="NoWrap"
                                         FontFamily="Consolas" FontSize="11" Background="#1E1E2E" Foreground="#CDD6F4" BorderThickness="0" Padding="8"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Response Headers">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="ResponseHeadersText" IsReadOnly="True" TextWrapping="NoWrap"
                                         FontFamily="Consolas" FontSize="11" Background="#1E1E2E" Foreground="#CDD6F4" BorderThickness="0" Padding="8"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Response Preview">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="ResponsePreviewText" IsReadOnly="True" TextWrapping="Wrap"
                                         FontFamily="Consolas" FontSize="11" Background="#1E1E2E" Foreground="#CDD6F4" BorderThickness="0" Padding="8"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Cookies">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="CookiesText" IsReadOnly="True" TextWrapping="Wrap"
                                         FontFamily="Consolas" FontSize="11" Background="#1E1E2E" Foreground="#CDD6F4" BorderThickness="0" Padding="8"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Timing">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="TimingText" IsReadOnly="True" TextWrapping="Wrap"
                                         FontFamily="Consolas" FontSize="11" Background="#1E1E2E" Foreground="#CDD6F4" BorderThickness="0" Padding="8"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Privacy Analysis">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="PrivacyAnalysisText" IsReadOnly="True" TextWrapping="Wrap"
                                         FontFamily="Segoe UI" FontSize="12" Background="#1E1E2E" Foreground="#CDD6F4" BorderThickness="0" Padding="8"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                    <TextBlock Grid.Row="1" x:Name="NoSelectionText" Text="Select a request to view details."
                               Foreground="#6C7086" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center"
                               Visibility="{Binding SelectedRequest, Converter={StaticResource NullToVisibilityInverseConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

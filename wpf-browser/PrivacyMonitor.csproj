<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <!-- ApplicationIcon: add favicon.ico to wpf-browser/ to set app icon -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <PublishReadyToRun>true</PublishReadyToRun>
    <DebugType>none</DebugType>
    <Version>1.0.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ExportBlocklist\**" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.0" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3719.77" />
    <PackageReference Include="WebView2.Runtime.X64" Version="114.0.1823.67" />
  </ItemGroup>

  <ItemGroup>
    <Resource Update="img.png" />
    <SplashScreen Include="img.png" />
  </ItemGroup>

  <!-- Embedded WebView2 runtime for single-exe distribution (created by publish.ps1) -->
  <ItemGroup Condition="Exists('$(MSBuildProjectDirectory)\WebView2Runtime.zip')">
    <EmbeddedResource Include="WebView2Runtime.zip" />
  </ItemGroup>

</Project>
